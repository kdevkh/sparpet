<body>
    <div class="social">
        <a id="kakao" href="/auth/kakao" class="btn"><img src="https://oopy.lazyrockets.com/api/v2/notion/image?src=https%3A%2F%2Fs3-us-west-2.amazonaws.com%2Fsecure.notion-static.com%2Ff5d7b9d3-6faa-4fbd-92fb-abc13883f4ac%2Fkakao.png&blockId=845a0760-d543-46ae-965d-018c4289eb32&width=80"></a>
        <a id="naver" href="/auth/naver" class="btn"><img src="https://logo-resources.thevc.kr/organizations/80x80/474579dde48065d1816615ddbeead76241db8ea8539f50d01c17089adc54f213_1646665866639929.jpg"></a>
        <a id="google" href="/auth/google" class="btn"><img src="https://logo-resources.thevc.kr/organizations/80x80/0245f6ea8d29ddc39286e0cd0ab97912eac3c26664a8700a6b08c00ce1982cf0_1617243129683114.jpg"></a>
    </div>


    <script>
        // 카카오톡 로그인 버튼 요소 가져오기
        const kakaoButton = document.getElementById('kakao');
        const naverButton = document.getElementById('naver');
        const googleButton = document.getElementById('google');

        // 카카오톡 로그인 버튼에 클릭 이벤트 리스너 추가
        kakaoButton.addEventListener('click', () => {
            // '/auth/kakao' 경로로 GET 요청 보내기
            fetch('/auth/kakao', {
                method: 'GET',
            })
                .then(response => {
                    if (response.ok) {
                        // 요청이 성공하면 메인 페이지로 리디렉션
                        window.location.href = '/posts';
                    } else {
                        // 요청이 실패한 경우 오류 메시지 출력
                        console.error('카카오톡 로그인 실패');
                    }
                })
                .catch(error => {
                    console.error('카카오톡 로그인 오류 발생', error);
                });
        });

        // 네이버 로그인 버튼에 클릭 이벤트 리스너 추가
        naverButton.addEventListener('click', () => {
            // '/auth/kakao' 경로로 GET 요청 보내기
            fetch('/auth/naver', {
                method: 'GET',
            })
                .then(response => {
                    if (response.ok) {
                        // 요청이 성공하면 메인 페이지로 리디렉션
                        window.location.href = '/posts';
                    } else {
                        // 요청이 실패한 경우 오류 메시지 출력
                        console.error('네이버 로그인 실패');
                    }
                })
                .catch(error => {
                    console.error('네이버 로그인 오류 발생', error);
                });
        });

         // 구글 로그인 버튼에 클릭 이벤트 리스너 추가
         naverButton.addEventListener('click', () => {
            // '/auth/kakao' 경로로 GET 요청 보내기
            fetch('/auth/google', {
                method: 'GET',
            })
                .then(response => {
                    if (response.ok) {
                        // 요청이 성공하면 메인 페이지로 리디렉션
                        window.location.href = '/posts';
                    } else {
                        // 요청이 실패한 경우 오류 메시지 출력
                        console.error('구글 로그인 실패');
                    }
                })
                .catch(error => {
                    console.error('구글 로그인 오류 발생', error);
                });
        });
        
    </script>
</body>