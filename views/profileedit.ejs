<body>
    <%- include('header.ejs') %>
  
    <h1 class="createpost">프로필 수정</h1>
    <form
      class="form-box"
      action="/users/profile?_method=PATCH"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="edit-profile-container">
        <div class="name">
          이름: <input
            type="text"
            name="name"
            value="<%= user.name %>"
          />
          </div>
           <div class="phone">
            전화번호: <input
              type="text"
              name="phone"
              value="<%= user.phone %>"
            />
          </div>
        <div class="gender">
      성별: <input
              type="text"
              name="gender"
              value="<%= user.gender %>"
            />
          </div>
          <div class="birth">
              생년월일: <input
              
              type="text"
              name="birth"
              value="<%= user.birth %>"
            />
          </div>
          <div class="password">
              비밀번호: <input
              
              type="password"
              name="password"
            />
          </div>
          <div class="password">
             비밀번호 확인: 
             <input
            type="password"
            name="passwordConfirm"
          
          />
          </div>
          <div class="img">
            <p><input type="file" name="profileImage" /></p>
          </div>
          <div class="btn">
            <button class="edit-profile-btn" type="submit">수정</button>
          </div>
        </div>
      </div>
    </form>
  </body>
  